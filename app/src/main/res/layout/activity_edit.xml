<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".views.editActivity.EditActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_name_textbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name of the routine"
        android:inputType="text" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:text="End time"
        tools:text="Needs ending time" />

    <EditText
        android:id="@+id/edit_textbox_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="End time of routine"
        android:inputType="time" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:orientation="horizontal"
        android:layout_weight="0.07">

        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New routine item" />

            <EditText
                android:id="@+id/edit_textbox_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.37"
                android:ems="10"
                android:hint="Item name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edit_textbox_item_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Item length in seconds"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <Button
            android:id="@+id/edit_button_item_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save item" />
    </LinearLayout>

    <ListView
        android:id="@+id/edit_list"
        android:layout_width="match_parent"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_weight="0.93" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/edit_button_routine_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save routine" />
    </LinearLayout>

</LinearLayout>